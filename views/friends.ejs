<!DOCTYPE html>
<html lang="es">

<head>
    <title> Mis amigos - FaceBluff </title>
    <link rel="stylesheet" href="css/style.css" media="screen">
    <link rel="stylesheet" href="css/styleFriends.css" media="screen">
    <meta charset="utf-8" />
</head>

<body>
    <div class="top">
        <img id="LogoImg" src="img/Logo.png" alt="logo">
        <div class="botonesArriba">
            <a href="/my_profile">Perfil</a>
            <a href="/friends">Amigos</a>
            <a href="">Preguntas</a>
            <a href="/logout">Desconectar</a>
            <label>
                <img class="iconoPerfil" src="/imagenUsuario" alt="fotoPerfil">
                <%= user.points %>
            </label>
        </div>
    </div>
    <div class="solicitudes">
        <div>
            <p>Solicitudes de amistad</p>
            <ul>
                    <%let i = 0; %>
                    <% friends.forEach(friend => { %>
                        <li>
                            <!--<%console.log("Status = " + friend.status + "Nombre = " + friend.name + "indice = "+ i); i++;%>-->
                            <% if(friend.status === 0) { %>
                                <div class="solAmigo">
                                    <img class="fotoAmigo" name="imagen" id="imagen" src="/friendImg" alt="fotoPerfil">
                                    <input type="hidden" name="userId" id="userId" value="<user.user_id>">
                                    <input type="hidden" name="friendId" id="friendId" value="<%=friend.user_id%>">
                                    <span class="nombre">
                                        <%= friend.name %> <%friend.user_id%>
                                    </span>
                                    <input class="botonAmigo" type="submit" value="Añadir">
                                    <input class="botonAmigo" type="submit" value="Rechazar">
                                </div>
                                <% } %>


                        </li>
                        <% }); %>
            </ul>
        </div>

        <div>
            <p>Búsqueda de amigos</p>
            <form>
                <label>Buscar por nombre: </label>
                <input class="relleno" type="text" name="nombre" required>
                <input class="botonBuscar" type="submit" value="Buscar">
            </form>
        </div>
        <div>
                <p>Mis amigos</p>
                <ul>
                        <%let a = 0; %>
                        <% friends.forEach(friend => { %>
                           <!-- <%console.log("Status abajo = " + friend.status + "Nombre abajo = " + friend.name + "indice  abajo= "+ a); a++;%> -->
                            <li>
                                <% if(friend.status === 1) { %>
                                    <div class="listAmigo">
                                        <img class="fotoAmigo" name="imagen" id="imagen"src="/friendImg" alt="fotoPerfil" value=<%friend.image%> >
                                        <span class="nombre">
                                            <%= friend.name %>
                                        </span>
                                    </div>
                                    <% } %>
                            </li>
                            <% }); %>
                </ul>
            </div>
    </div>
</body>

</html>