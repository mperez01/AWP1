<!DOCTYPE html>
<html lang="es">

<head>
    <title> Bienvenido - Facebluff </title>
    <link rel="stylesheet" href="css/style.css" media="screen">
    <meta charset="utf-8" />
</head>

<body>
    <div class="top">
        <img id="LogoImg" src="img/Logo.png" alt="logo">
        <div class="botonesArriba">
            <a href="/login.html">Entrar</a>
            <a href="/new_user.html">Nuevo Usuario</a>
        </div>
    </div>
    <div class="login">
        <p>Entrar</p>
        <div class="recuadro">
            <form action="/login" method="POST">
                <div>
                    <label>Email </label>
                    <input class="rellenar" type="email" name="email">
                </div>
                <div>
                    <label>Contrase√±a </label>
                    <input class="rellenar" type="password" name="pass">
                </div>
                <input class="boton" type="submit" value="Conectar">
            </form>
        </div>
        <% let errorMsg = getFlash(); %>
        <% if (errorMsg) { %>
            <div class="error">
                <%= errorMsg %>
            </div>
        <% } %>
        <% if (errores.email) { %>
            <div class="error">
                <%= errores.email.msg %>
            </div>
        <% } %>
        <% if (errores.pass) { %>
            <div class="error">
                <%= errores.pass.msg %>
            </div>
        <% } %>
    </div>
</body>

</html>
