<!DOCTYPE html>
<html lang="es">

<head>
    <title> Perfil - Facebluff </title>
    <link rel="stylesheet" href="css/style.css" media="screen">
    <link rel="stylesheet" href="css/styleMyProfile.css" media="screen">
    <meta charset="utf-8" />
</head>

<body>
        <%- include("headerIn") %>
    <div class="perfil">
        <p>Tu perfil</p>

        <div class="userData">
            <img class="fotoPerfil" src="/imagenUsuario/<%=user.image%>" alt="fotoPerfil">
            <p class="nombre"><%= user.name %></p>
            <% if (user.dateOfBirth !== null) { %>
            <p class="datos"> <%= user.age %> años </p>
            <% } %> 
            <!--hacer funcion para calcular la edad(profe dijo que con el tema 6 se podia)-->
            <p class="datos">
                <% if(user.gender !== null){ %>
                    <% if(user.gender==="male"){ %>
                        Hombre
                    <% } else if(user.gender==="female"){ %>
                        Mujer
                    <% } else { %>
                        No identificado
                    <% } %>
                <% } %>
                
            </p>
            <p class="datos"><%= user.points%> puntos</p>
        </div>
        <div class="botonesAbajo">
            <a href="/modify_profile" > Modificar perfil</a>
            <a href="/upload_img">Subir imágen</a>
        </div>
    
        <% let mensaje = getFlash(); %>
        <% if (mensaje) { %>
            <div class="error">
                <%= mensaje %>
            </div>
        <% } %>
            <%if(images.length!=0){%>
                <p>Tus imágenes</p>
                <%images.forEach(image=>{ %>
                    <div class="imagenes">
                        <img class="image" name="imagen" src="/images/<%=image.image%>" alt='<%=image.description%>'>
                        <p class="descripcion"><%= image.description%></p>
                    </div>
                <%})}%>
    </div>

</body>

</html>
